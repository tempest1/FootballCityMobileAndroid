<?xml version="1.0" encoding="utf-8"?>
<!-- 透明的title完成,图片需要改成向下的箭头-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/title_normal_myinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_background"
    >
    <Button

        android:id="@+id/detail_back_myinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/back_normal"
        android:layout_alignParentLeft="true"
        style="@style/title_type"
        />

    <TextView
        style="@style/title_type"
        android:id="@+id/detail_title_center_myinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人资料"
        android:layout_centerInParent="true"

        />

    <Button

        android:background="@drawable/title_type"
        android:id="@+id/detail_title_myinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        style="@style/title_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>