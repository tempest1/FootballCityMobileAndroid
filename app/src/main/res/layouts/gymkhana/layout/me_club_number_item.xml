<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_transparent"
    >

    <RelativeLayout
        android:orientation="horizontal"

        android:background="@drawable/rectangle_3_grey"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:id="@+id/user_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="5dp"
            android:src="@drawable/test1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一脚定江山"
            android:layout_above="@+id/feng"
            android:layout_alignLeft="@+id/feng"
            android:layout_alignStart="@+id/feng" />

        <TextView
            android:id="@+id/feng"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<TextView-->
            <!--android:id="@+id/player_age"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="36岁"-->
            <!--android:layout_below="@+id/feng"-->
            <!--android:layout_toRightOf="@+id/feng"-->
            <!--android:layout_toEndOf="@+id/feng" />-->


        <TextView
            android:id="@+id/feng1"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
      />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="擅长 :"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/play_well"
            android:layout_toRightOf="@+id/feng"
            android:layout_toEndOf="@+id/feng" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/play_well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前锋"
            android:layout_below="@+id/feng"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />


        <RadioButton
            style="@style/checkboxStyle"
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/play_well"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

</LinearLayout>