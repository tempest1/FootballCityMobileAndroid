<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    >

    <include layout="@layout/title_normal"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_gray"
        android:layout_marginTop="15dp"

        >

        <TextView
            android:id="@+id/name"
            android:text="皇家马德里"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/view4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp" />

        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/leader"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:textColor="@color/white"
            android:text="活动场馆: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignTop="@+id/image"
            android:layout_alignLeft="@+id/texView9"
            android:layout_alignStart="@+id/texView9" />
        <TextView
            android:id="@+id/way"
            android:text="奥克体育场"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toLeftOf="@+id/image"
            android:layout_toStartOf="@+id/image" />

        <TextView
            android:id="@+id/texView9"
            android:textColor="@color/white"
            android:text="活动时间: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView

            android:id="@+id/time"
            android:textColor="@color/white"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/texView9"
            android:layout_toRightOf="@+id/texView9"
            android:layout_toLeftOf="@+id/image"
            android:layout_toStartOf="@+id/image" />

        <TextView
            android:id="@+id/texView10"
            android:textColor="@color/white"
            android:text="领队: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/age"
            android:layout_alignLeft="@+id/texView11"
            android:layout_alignStart="@+id/texView11" />
        <TextView
            android:id="@+id/leader"
            android:text="一脚成名"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/texView10"
            android:layout_toRightOf="@+id/texView10"
            android:layout_toLeftOf="@+id/image"
            android:layout_toStartOf="@+id/image" />
        <TextView
            android:id="@+id/texView11"
            android:textColor="@color/white"
            android:text="平均年龄: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="150dp"
            />
        <TextView
            android:id="@+id/age"
            android:text="35"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/texView11"
            android:layout_toRightOf="@+id/texView11"
            android:layout_toEndOf="@+id/texView11" />

        <TextView
            android:id="@+id/texView12"
            android:textColor="@color/white"
            android:text="成立时间: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/texView13"
            android:layout_alignLeft="@+id/texView13"
            android:layout_alignStart="@+id/texView13" />
        <TextView
            android:id="@+id/bulid_time"
            android:text="2142-1-2"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/texView12"
            android:layout_toRightOf="@+id/texView12"
            android:layout_toLeftOf="@+id/image"
            android:layout_toStartOf="@+id/image" />

        <TextView
            android:id="@+id/texView13"
            android:textColor="@color/white"
            android:text="俱乐部福利: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/texView11"
            android:layout_alignLeft="@+id/texView11"
            android:layout_alignStart="@+id/texView11" />

        <LinearLayout
            android:background="@color/green"

            android:orientation="vertical"
            android:layout_alignTop="@+id/texView13"
            android:layout_toRightOf="@+id/texView13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">
            <TextView
                android:minLines="2"
                android:id="@+id/great"
                android:text="农夫山泉"
                android:textColor="@color/white"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/texView13"
                android:layout_toRightOf="@+id/texView13"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@color/transparent_background"
            android:id="@+id/view4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:id="@+id/view" />
        <TextView
            android:textColor="@color/white"
            android:text="俱乐部成员: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_below="@+id/texView12"
            android:layout_alignLeft="@+id/texView12"
            android:layout_alignStart="@+id/texView12" />

        <TextView
            android:textColor="@color/white"
            android:text="共21人"
            android:id="@+id/club_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/join"
        android:textColor="@color/white"
        android:text="我要加盟"
        android:background="@drawable/rectangle_green_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
</LinearLayout>