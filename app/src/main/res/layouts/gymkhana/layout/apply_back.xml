<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    >

    <include layout="@layout/title_normal">

    </include>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.footballcitymobileandroid.BLL.Util.CustomView.EmoticonsEditText


        android:id="@+id/edit"
        android:layout_below="@+id/choose_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/transparent_gary"
        android:layout_marginTop="15dp"
        android:hint="在此输入退赛理由"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        android:padding="@dimen/login_edit_padding"
        android:gravity="start|top"
        />
    <View
        android:layout_below="@+id/edit"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        />
    <Button
        android:layout_marginTop="66dp"
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:background="@drawable/btn_bule"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />
</LinearLayout>