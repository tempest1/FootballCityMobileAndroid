<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    >

    <include layout="@layout/title_normal"
        android:id="@+id/include10">

    </include>
    <RelativeLayout
        android:background="@drawable/rectangle_gray_sw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include10">
        <include layout="@layout/pull_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@+id/input_layout"/>
        <RelativeLayout
            android:id="@+id/input_layout"
            android:layout_above="@+id/emote_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/linght_gray"
            android:paddingBottom="3dp"
            >
            <RelativeLayout
                android:id="@+id/add_pic"
                android:layout_width="@dimen/button_emoj_size"
                android:layout_height="@dimen/button_emoj_size"
                android:layout_marginRight="@dimen/top_margin_text"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                >
                <ImageButton
                    android:id="@+id/pic_keybord"
                    android:layout_width="@dimen/button_emoj_size"
                    android:layout_height="@dimen/button_emoj_size"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/post_key_broad"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/response_add_pic"
                    android:layout_width="@dimen/button_emoj_size"
                    android:layout_height="@dimen/button_emoj_size"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/post_add_pic"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/add_emoj"
                android:layout_toRightOf="@+id/add_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/top_margin_text"
                android:layout_centerInParent="true"
                >
                <ImageButton
                    android:id="@+id/response_keybord"
                    android:layout_width="@dimen/button_emoj_size"
                    android:layout_height="@dimen/button_emoj_size"
                    android:background="@mipmap/post_key_broad"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/response_emote"
                    android:layout_width="@dimen/button_emoj_size"
                    android:layout_height="@dimen/button_emoj_size"
                    android:background="@mipmap/post_emoj"
                    />
            </RelativeLayout>

            <com.footballcitymobileandroid.BLL.Util.CustomView.EmoticonsEditText
                android:id="@+id/response_text"
                android:layout_marginRight="@dimen/top_margin_text"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/add_emoj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/top_margin_text"
                android:background="@drawable/loading_shape"
                android:textSize="14sp"
                android:minHeight="46dp"
                android:layout_toLeftOf="@+id/btn_send"
                android:singleLine="true"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/btn_sendReply"
                android:layout_height="@dimen/button_emoj_size"
                android:layout_marginRight="@dimen/top_margin_text"
                android:text="发送"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/post_btn_send"
                />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/emote_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/msg_editor_backgroud"
            >
            <!-- 表情 -->
            <com.footballcitymobileandroid.BLL.Util.CustomView.EmoteInputView
                android:id="@+id/response_inputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                >
            </com.footballcitymobileandroid.BLL.Util.CustomView.EmoteInputView>
            <!-- 上传图片 -->
            <LinearLayout
                android:id="@+id/upload_layout"
                android:layout_width="match_parent"
                android:layout_height="224dip"
                android:gravity="center"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                >
                <Button
                    android:id="@+id/upload_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="@string/upload_local"/>
                <Button
                    android:id="@+id/upload_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="@string/upload_carmer"
                    />
            </LinearLayout>
            <!-- 图片列表 -->
            <LinearLayout
                android:id="@+id/img_pick_layout"
                android:layout_width="match_parent"
                android:layout_height="224dip"
                android:animateLayoutChanges="true"
                android:visibility="gone">
                <com.footballcitymobileandroid.BLL.Util.CustomView.HorizontalListView
                    android:id="@+id/picture_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.footballcitymobileandroid.BLL.Util.CustomView.HorizontalListView>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>