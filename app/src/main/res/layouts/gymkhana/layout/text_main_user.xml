<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:id="@+id/fc_userReg"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取手机验证码"
        android:id="@+id/fc_get_usercode"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登入"
        android:id="@+id/fc_userLogin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户退出"
        android:id="@+id/fc_userExit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询自己详细信息"
        android:id="@+id/fc_queryMyself"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改自己详细信息"
        android:id="@+id/fc_modifyMyself"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改自己密码"
        android:id="@+id/fc_modifyPwd"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改自己手机号"
        android:id="@+id/fc_modifyPhone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取配置数据"
        android:id="@+id/fc_getConfig"/>
</LinearLayout>