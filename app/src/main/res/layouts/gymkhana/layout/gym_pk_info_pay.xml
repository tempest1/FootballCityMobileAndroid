<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_blue"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:background="@drawable/rectangle_3_blue"
            android:layout_height="50dp"
            android:layout_width="270dp"
            android:layout_marginTop="104dp"
            android:id="@+id/textView27"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:background="@drawable/rectangle_2_blue"
            android:layout_width="270dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView27"
            android:layout_alignLeft="@+id/textView27"
            android:layout_alignStart="@+id/textView27">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/pay_way"
                android:textSize="25dp"
                android:text="主队支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginLeft="185dp"

                android:background="@color/transparent_red"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_below="@+id/pay_way"
                android:id="@+id/t1" />

            <TextView
                android:id="@+id/t3"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent_while"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/t1"
                android:layout_toRightOf="@+id/t1"
                android:layout_toEndOf="@+id/t1" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>