<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_pageview"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:textSize="20dp"
            android:text="奥林体育场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/main_place" />

        <TextView
            android:id="@+id/text1"
            android:text="@string/palce"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/main_place"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/text2"
            android:text="@string/money"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text3"
            android:text="@string/day"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text4"
            android:text="@string/time"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text5"
            android:text="@string/way"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text6"
            android:text="@string/chellage"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView

            android:layout_marginLeft="50dp"
            android:textSize="16dp"
            android:id="@+id/plac1"
            android:text="奥林皮克东外场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView

            android:textSize="16dp"
            android:id="@+id/money"

            android:text="AA制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/plac1"
            android:layout_alignStart="@+id/plac1"
            android:layout_alignTop="@+id/text2"
            android:layout_alignRight="@+id/plac1"
            android:layout_alignEnd="@+id/plac1" />
        <TextView

            android:textSize="16dp"
            android:id="@+id/days"

            android:text="03/15 周二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text4"
            android:layout_alignLeft="@+id/money"
            android:layout_alignStart="@+id/money"
            android:layout_alignRight="@+id/money"
            android:layout_alignEnd="@+id/money" />

        <TextView

            android:textSize="16dp"
            android:id="@+id/time"

            android:text="15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/days"
            android:layout_alignStart="@+id/days"
            android:layout_alignTop="@+id/text4"
            android:layout_alignRight="@+id/days"
            android:layout_alignEnd="@+id/days" />
        <TextView
            android:id="@+id/way"

            android:textSize="16dp"

            android:text="10人制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time"
            android:layout_alignTop="@+id/text5"
            android:layout_alignRight="@+id/time"
            android:layout_alignEnd="@+id/time" />

        <LinearLayout

            android:id="@+id/challeage"

            android:textSize="16dp"
            android:text="AC米兰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text6"
            android:layout_alignLeft="@+id/way"
            android:layout_alignStart="@+id/way"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">

            <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/test1"
                android:id="@+id/ig"
                />

            <TextView
                android:id="@+id/club_team"
                android:textSize="18dp"
                android:text="AC米兰"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:background="@drawable/btn_bg_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接受"
            android:id="@+id/accept"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="61dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="30dp" />

        <Button
            android:background="@drawable/btn_red_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:id="@+id/refuse"

            android:layout_alignTop="@+id/accept"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp" />

    </RelativeLayout>
</LinearLayout>