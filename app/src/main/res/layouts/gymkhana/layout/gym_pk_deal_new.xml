<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/beijing3">

    <include layout="@layout/title_normal"></include>
    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        style="@style/Theme.Transparent"
        android:layout_gravity="left|bottom"
        >
        <RadioButton
            style="@style/radio_type"
            android:text="接受"
            android:id="@+id/radio_accept"
            android:checked="true"
            android:drawableBottom="@mipmap/head"

            />

        <RadioButton
            android:drawableBottom="@mipmap/agenull"
            style="@style/radio_type"
            android:text="发送"
            android:id="@+id/radio_deliver" />

    </RadioGroup>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_pageview"
        android:layout_marginTop="15dp"

        >
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </FrameLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />



</LinearLayout>