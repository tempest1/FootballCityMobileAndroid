<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/beijing">
    <include layout="@layout/title_normal">
    </include>
    <include layout="@layout/activity_main_top_tab" />
    <EditText
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="11"
        android:id="@+id/register_phones"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/phone"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edit_rect"
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/next"
        android:text="下一步"
        android:background="@drawable/btn_green_rec"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>