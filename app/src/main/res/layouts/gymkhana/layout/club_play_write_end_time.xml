<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_gray"
        android:layout_marginTop="15dp"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/rectangle_8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout"
            android:weightSum="1">


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_3"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:background="@drawable/oval"
                    android:layout_width="15dp"
                    android:layout_height="15dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp">

                </LinearLayout>


                <LinearLayout
                    android:background="@drawable/oval"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="25dp"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"></LinearLayout>




            </RelativeLayout>
            <TextView
                android:id="@+id/mouth"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:background="#FFCC66"
                android:hint="设置开始时间" />
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="282dp"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_2"
                >


                <Spinner
                    android:background="@drawable/rectangle_while_spr"
                    android:drawableLeft="@mipmap/xia"
                    android:layout_marginLeft="30dp"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/year"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView24"
                    android:layout_toEndOf="@+id/textView24" />


                <Spinner
                    android:background="@drawable/rectangle_while_spr"
                    android:drawableLeft="@mipmap/xia"

                    android:layout_marginLeft="30dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/month"
                    android:layout_alignTop="@+id/year"
                    android:layout_toRightOf="@+id/year"
                    android:layout_toEndOf="@+id/year" />
                <Spinner
                    android:drawableLeft="@mipmap/xia"

                    android:background="@drawable/rectangle_while_spr"
                    android:layout_marginLeft="30dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/day"
                    android:layout_alignTop="@+id/month"
                    android:layout_toRightOf="@+id/month" />
            </RelativeLayout>
        </LinearLayout>

        <!--<include-->
        <!--layout="@layout/club_dot"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="bottom|center_horizontal"-->
        <!--android:gravity="center"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true" />-->
    </RelativeLayout>

</LinearLayout>