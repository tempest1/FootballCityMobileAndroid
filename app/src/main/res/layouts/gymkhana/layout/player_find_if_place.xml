<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/match_ground"
    >
    <Button
        android:textColor="@color/white"
        android:background="@mipmap/place"
        android:text="门将"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_door" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_later"
        android:background="@mipmap/place"
        android:text="后卫"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_door"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_center"
        android:background="@mipmap/place"
        android:text="中场"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_later"
        android:layout_alignStart="@+id/btn_later" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_head"
        android:background="@mipmap/place"
        android:text="前锋"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_center"
        android:layout_alignStart="@+id/btn_center"
        android:layout_marginBottom="67dp" />
</RelativeLayout>
