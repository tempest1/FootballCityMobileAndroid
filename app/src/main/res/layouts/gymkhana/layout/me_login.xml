<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/beijing">
    <include layout="@layout/me_title_login">
    </include>
    <include layout="@layout/activity_main_top_tab"
        />
    <EditText
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="帐号"
        android:background="@drawable/edti_oval"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="密码"
        android:background="@drawable/edti_oval"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:text="登录"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_green2"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentLeft="true"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="新用户"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>