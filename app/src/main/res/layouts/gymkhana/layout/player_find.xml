<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    >
    
    <include layout="@layout/title_find"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/transparent_background" />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/find_player"
        >

        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sousuo"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/fin"
            android:layout_toRightOf="@+id/list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="球员普通查找"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/imageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/transparent_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line" />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/if_find_player"

        >
        <ImageView
            android:id="@+id/list_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sousuo"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/list_string1"
            android:layout_toRightOf="@+id/list_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="球员条件查找"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/imageRight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>
</LinearLayout>