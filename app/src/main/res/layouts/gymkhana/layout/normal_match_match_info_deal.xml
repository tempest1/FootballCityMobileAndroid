<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    >

    <include layout="@layout/title_normal"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_background"
            android:id="@+id/look_sign_people"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:text="查看签到人员"
                android:id="@+id/investment"
                android:gravity="center_vertical"
                android:background="@color/transparent_background"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/transparent_background" />

            <View
                android:id="@+id/line1"

                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />
        </RelativeLayout>



        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign"

            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:text="签到"
                android:gravity="center_vertical"
                android:background="@color/transparent_background"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/transparent_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />
        </RelativeLayout>



        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/write_player"

            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:text="录入比赛结果"
                android:gravity="center_vertical"
                android:background="@color/transparent_background"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/transparent_background" />

            <View
                android:id="@+id/line3"

                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />
        </RelativeLayout>


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/looking"

            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:text="查看比赛内容"
                android:gravity="center_vertical"
                android:background="@color/transparent_background"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/transparent_background" />

            <View
                android:id="@+id/line2"

                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />
        </RelativeLayout>


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete"

            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:text="删除比赛信息"
                android:gravity="center_vertical"
                android:background="@color/transparent_background"/>

            <ImageView
                android:id="@+id/imageRight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/transparent_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@color/transparent_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line" />
    </LinearLayout>
</LinearLayout>