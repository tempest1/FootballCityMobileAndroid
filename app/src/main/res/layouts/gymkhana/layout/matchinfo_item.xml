<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_background"
    >

    <RelativeLayout
        android:orientation="horizontal"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_gray"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:src="@mipmap/term_sign"
            android:id="@+id/image_my"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/ways"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />


        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_me"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="皇家马德里"
            android:layout_alignTop="@+id/way"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:src="@mipmap/term_sign"
            android:id="@+id/image_yours"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="43dp"
            android:layout_marginEnd="43dp" />
        <TextView
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_your"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="皇家马德里"
            android:layout_below="@+id/ways"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/time"
            android:text="6月1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ways"
            android:text="8v8"
            android:textColor="@color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_centerHorizontal="true" />
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="奥克体育场"
            android:textColor="@color/white"
            android:id="@+id/way"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ways"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>