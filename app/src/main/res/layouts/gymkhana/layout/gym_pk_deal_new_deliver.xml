<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_pageview"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:textSize="20dp"
            android:text="奥林体育场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/main_place" />

        <TextView
            android:id="@+id/text1"
            android:text="@string/palce"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/main_place"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/text2"
            android:text="@string/money"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text3"
            android:text="@string/day"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text4"
            android:text="@string/time"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text5"
            android:text="@string/way"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
        <TextView
            android:id="@+id/text6"
            android:text="@string/chellage"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/text5"
            android:layout_alignLeft="@+id/text5"
            android:layout_alignStart="@+id/text5" />
        <TextView

            android:textSize="20dp"
            android:id="@+id/place"
            android:text="奥林皮克东外场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:layout_alignTop="@+id/text1"
            android:layout_alignLeft="@+id/main_place"
            android:layout_alignStart="@+id/main_place" />

        <TextView

            android:textSize="18dp"
            android:id="@+id/money"

            android:text="AA制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text2"
            android:layout_alignLeft="@+id/place"
            android:layout_alignStart="@+id/place" />
        <TextView

            android:textSize="18dp"
            android:id="@+id/days"

            android:text="03/15 周二"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text3"
            android:layout_alignLeft="@+id/money"
            android:layout_alignStart="@+id/money" />

        <TextView

            android:textSize="18dp"
            android:id="@+id/time"

            android:text="15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text5"
            android:layout_alignLeft="@+id/days"
            android:layout_alignStart="@+id/days" />
        <TextView
            android:id="@+id/way"

            android:textSize="18dp"

            android:text="10人制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/text5"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/way"
            android:layout_alignLeft="@+id/way"
            android:layout_alignStart="@+id/way"
            android:textSize="18dp"
            android:text="AC米兰"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/text6"

            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7">

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/way"
            android:layout_alignLeft="@+id/way"
            android:layout_alignStart="@+id/way"
            android:layout_alignTop="@+id/text6"

            android:textSize="18dp"
            android:text="AC米兰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8">

            <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/test1"
                android:id="@+id/view2"
                />
            <TextView
                android:id="@+id/name2"
                android:textSize="18dp"
                android:text="AC米兰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/way"
                android:layout_alignRight="@+id/main_place"
                android:layout_alignEnd="@+id/main_place" />

        </LinearLayout>

        <TextView
            android:textSize="18dp"
            android:text="AC米兰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name3"
            android:layout_below="@+id/linearLayout8"
            android:layout_alignRight="@+id/linearLayout8"
            android:layout_alignEnd="@+id/linearLayout8" />

        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/test1"

            android:layout_alignBottom="@+id/name3"
            android:layout_toRightOf="@+id/linearLayout7"
            android:layout_toEndOf="@+id/linearLayout7"
            android:id="@+id/view3" />

        <TextView
            android:textSize="18dp"
            android:text="AC米兰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:layout_above="@+id/linearLayout8"
            android:layout_toRightOf="@+id/view3"
            android:layout_toEndOf="@+id/view3" />

        <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/test1"

            android:layout_alignTop="@+id/name1"
            android:layout_alignLeft="@+id/linearLayout7"
            android:layout_alignStart="@+id/linearLayout7"
            android:id="@+id/view1" />

        <Button
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_red_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要挑战"
            android:id="@+id/accept"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>