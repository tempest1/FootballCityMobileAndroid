<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@drawable/rectangle_gray_sw"
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <TextView
            android:text="奥克竞技场 16/02-04 赛季"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seasa" />

        <com.footballcitymobileandroid.BLL.Util.CustomView.PieView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/pv"

            android:layout_below="@+id/seasa"
            android:layout_alignLeft="@+id/textView39"
            android:layout_alignStart="@+id/textView39" />


        <TextView
            android:background="@mipmap/chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_alignTop="@+id/pv"
            android:layout_toRightOf="@+id/pv"
            android:layout_toEndOf="@+id/pv"
            android:id="@+id/textView29" />
        <TextView
            android:text="积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/textView29"
            android:layout_toRightOf="@+id/textView29"
            android:layout_toEndOf="@+id/textView29"
            android:id="@+id/textView30" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/point"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView30"
            android:layout_toRightOf="@+id/textView30"
            android:layout_toEndOf="@+id/textView30" />
        <TextView
            android:layout_marginTop="5dp"
            android:background="@mipmap/zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_alignLeft="@+id/textView29"
            android:layout_alignStart="@+id/textView29"
            android:id="@+id/textView31" />

        <TextView
            android:text="排名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView31"
            android:layout_toRightOf="@+id/textView29"
            android:layout_toEndOf="@+id/textView29"
            android:id="@+id/textView32" />
        <TextView
            android:id="@+id/rank"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView32"
            android:layout_alignLeft="@+id/point"
            android:layout_alignStart="@+id/point" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/oval_green"
            android:layout_below="@+id/textView31"
            android:layout_alignRight="@+id/textView31"
            android:layout_alignEnd="@+id/textView31"
            android:id="@+id/textView33" />

        <TextView
            android:gravity="center"
            android:text="胜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView33"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:layout_alignRight="@+id/textView32"
            android:layout_alignEnd="@+id/textView32"
            android:id="@+id/textView34" />
        <TextView
            android:id="@+id/win"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView34"
            android:layout_alignBottom="@+id/textView34"
            android:layout_alignLeft="@+id/rank"
            android:layout_alignStart="@+id/rank" />
        <TextView
            android:layout_marginTop="5dp"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/oval_while"
            android:layout_below="@+id/textView33"
            android:layout_alignLeft="@+id/textView33"
            android:layout_alignStart="@+id/textView33"
            android:id="@+id/textView35" />

        <TextView
            android:gravity="center"
            android:text="平"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView35"
            android:layout_alignLeft="@+id/textView34"
            android:layout_alignStart="@+id/textView34"
            android:layout_alignRight="@+id/textView34"
            android:layout_alignEnd="@+id/textView34"
            android:id="@+id/textView36" />
        <TextView
            android:id="@+id/equit"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView36"
            android:layout_alignLeft="@+id/win"
            android:layout_alignStart="@+id/win" />

        <TextView
            android:layout_marginTop="5dp"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/oval"
            android:layout_below="@+id/textView36"
            android:layout_alignLeft="@+id/textView35"
            android:layout_alignStart="@+id/textView35"
            android:id="@+id/textView37" />
        <TextView
            android:gravity="center"
            android:text="负"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView37"
            android:layout_toRightOf="@+id/textView29"
            android:layout_alignRight="@+id/textView36"
            android:layout_alignEnd="@+id/textView36"
            android:id="@+id/textView38" />
        <TextView
            android:id="@+id/fail"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView38"
            android:layout_alignLeft="@+id/equit"
            android:layout_alignStart="@+id/equit" />



        <TextView
            android:background="@mipmap/ball_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textView42"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:id="@+id/textView39" />

        <TextView
            android:text="进球"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView39"
            android:layout_alignStart="@+id/textView39"
            android:layout_alignRight="@+id/textView39"
            android:layout_alignEnd="@+id/textView39"
            android:id="@+id/textView40" />

        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/get_point"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView39"
            android:layout_toRightOf="@+id/textView39"
            android:layout_alignParentBottom="true" />

        <TextView
            android:background="@mipmap/ball_late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView41"
            android:layout_above="@+id/textView42"
            android:layout_alignRight="@+id/pv"
         />
        <TextView
            android:text="失球"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView41"
            android:layout_alignStart="@+id/textView41"
            android:layout_alignRight="@+id/textView41"
            android:id="@+id/textView42" />

        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/lose_point"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView41"
            android:layout_toEndOf="@+id/textView41"
            android:layout_alignTop="@+id/textView41"
            android:layout_alignParentBottom="true" />

        <TextView
            android:background="@mipmap/ball_frist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/lose_point"
            android:layout_alignRight="@+id/textView38"
            android:layout_alignEnd="@+id/textView38"
            android:id="@+id/textView43" />

        <TextView
            android:text="净胜球"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView43"
            android:layout_alignStart="@+id/textView43"
            android:id="@+id/textView44" />

        <TextView
            android:gravity="center"
            android:id="@+id/win_point"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView44"
            android:layout_toEndOf="@+id/textView44"
            android:layout_alignTop="@+id/textView43" />

    </RelativeLayout>
</LinearLayout>