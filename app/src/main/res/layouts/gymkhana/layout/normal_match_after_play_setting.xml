<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_footplace"
    >
    <include layout="@layout/title_normal"
        android:id="@+id/include9"></include>

    <TextView
        android:textColor="@color/white"
        android:text="场上队员"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/textView21" />

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/include9"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textColor="@color/white"
        android:text="替补队员"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include9"
        android:layout_toRightOf="@+id/flag"
        android:layout_toEndOf="@+id/flag"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/textView22" />

    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:id="@+id/iamge1" />

    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/name1"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iamge1"
        android:layout_alignRight="@+id/iamge1"
        android:layout_alignEnd="@+id/iamge1" />

    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iamge2"
        android:layout_alignTop="@+id/iamge1"
        android:layout_toRightOf="@+id/iamge1"
        android:layout_toEndOf="@+id/iamge1" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/name2"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iamge2"
        android:layout_alignRight="@+id/iamge2"
        android:layout_alignEnd="@+id/iamge2" />
    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iamge3"
        android:layout_alignTop="@+id/iamge2"
        android:layout_toRightOf="@+id/iamge2"
        android:layout_toEndOf="@+id/iamge2" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/name3"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iamge3"
        android:layout_alignRight="@+id/iamge3"
        android:layout_alignEnd="@+id/iamge3" />

    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iamge4"
        android:layout_alignTop="@+id/iamge3"
        android:layout_toRightOf="@+id/iamge3"
        android:layout_toEndOf="@+id/iamge3" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/name4"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iamge4"
        android:layout_alignRight="@+id/iamge4"
        android:layout_alignEnd="@+id/iamge4" />

    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/t_iamge1"
        android:layout_above="@+id/name4"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/t_name1"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name4"
        android:layout_alignLeft="@+id/t_iamge1"
        android:layout_alignStart="@+id/t_iamge1" />

    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/t_iamge2"
        android:layout_above="@+id/t_name1"
        android:layout_toRightOf="@+id/t_iamge1"
        android:layout_toEndOf="@+id/t_iamge1" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/t_name2"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name4"
        android:layout_alignLeft="@+id/t_iamge2"
        android:layout_alignStart="@+id/t_iamge2" />
    <com.footballcitymobileandroid.BLL.Util.CustomView.CircleButton
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/t_iamge3"
        android:layout_above="@+id/t_name1"
        android:layout_toRightOf="@+id/t_iamge2"
        android:layout_toEndOf="@+id/t_iamge2" />
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/t_name3"
        android:textColor="@color/white"
        android:text="梅西"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name4"
        android:layout_alignLeft="@+id/t_iamge3"
        android:layout_alignStart="@+id/t_iamge3" />


</RelativeLayout>