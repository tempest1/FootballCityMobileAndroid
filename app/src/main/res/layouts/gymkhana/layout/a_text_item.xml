<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_background"
    >

    <RelativeLayout
        android:orientation="horizontal"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_gray_sw"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


<ImageView
    android:src="@drawable/test1"
    android:id="@+id/image_my"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignTop="@+id/image_yours"
    android:layout_alignLeft="@+id/tv_me"
    android:layout_alignStart="@+id/tv_me"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="15dp" />


        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_me"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="皇家马德里"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/test1"
            android:id="@+id/image_yours"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_your"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="皇家马"
            android:layout_alignTop="@+id/tv_me"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:id="@+id/time"
            android:text="6月1日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ways"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ways"
            android:text="8v8"
            android:textColor="@color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_marginTop="5dp"

            android:text="奥克体育场"
            android:textColor="@color/white"
            android:id="@+id/way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ways"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <TextView
        android:textColor="@color/red"
        android:textSize="20dp"
        android:text="已完成"
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>