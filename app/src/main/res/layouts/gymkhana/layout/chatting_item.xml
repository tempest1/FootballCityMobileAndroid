<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/personhead"
        android:id="@+id/response_image"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_margin="8dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/chat2"
        android:orientation="vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/response_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff397cbf"
                android:textSize="14sp"
                android:text="3232"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/response_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaaaaaa"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="123"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/response_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:textColor="#ff397cbf"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:textSize="14sp"
            android:drawablePadding="8dip"/>
        <com.footballcitymobileandroid.BLL.Util.CustomView.HandyTextView
            android:id="@+id/response_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingRight="8dip"
            android:paddingTop="8dip"
            android:textColor="#ff397cbf"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="213"
            android:drawablePadding="8dip"/>
        <ImageView
            android:id="@+id/big_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="230dp"
                />
            <ImageView
                android:id="@+id/image_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="230dp" />
            <ImageView
                android:id="@+id/image_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxHeight="230dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fffafafa" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:id="@+id/home_viewed_item_all"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp"
                android:drawablePadding="4dip"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>